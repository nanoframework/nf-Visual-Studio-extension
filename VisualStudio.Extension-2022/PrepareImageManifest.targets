<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="PrepareImageManifests" AfterTargets="CopyFilesToOutputDirectory" BeforeTargets="GeneratePkgDef">

    <GetAssemblyIdentity AssemblyFiles="$(TargetPath)">
      <Output TaskParameter="Assemblies" ItemName="AssemblyInfo"/>
    </GetAssemblyIdentity>

    <ItemGroup>
      <ImageManifests Include="**\*.imagemanifest">
        <AssemblyVersion>%(AssemblyInfo.Version)</AssemblyVersion>
        <PublicKeyToken>%(AssemblyInfo.PublicKeyToken)</PublicKeyToken>
      </ImageManifests>
    </ItemGroup>

  </Target>

  <Target Name="PrepareSingleImageManifest" AfterTargets="PrepareImageManifests"
          Outputs="%(ImageManifests.Identity)">

    <PropertyGroup>
      <Namespace>
        <Namespace Prefix="x" Uri="http://schemas.microsoft.com/VisualStudio/ImageManifestSchema/2014" />
      </Namespace>
      <XPathQuery>/x:ImageManifest/x:Symbols/x:String[@Name='Resources']/@Value</XPathQuery>
    </PropertyGroup>

    <Error Text="The AssemblyVersion is not set. imagemanifest cannot be updated." Condition="'%(ImageManifests.AssemblyVersion)' == ''" />
    <Error Text="No PublicKeyToken available. The assembly must be signed with a strong name key to update the imagemanifest file." Condition="'%(ImageManifests.PublicKeyToken)' == ''" />

    <XmlPeek Namespaces="$(Namespace)" XmlInputPath="%(ImageManifests.FullPath)" Query="$(XPathQuery)">
      <Output TaskParameter="Result" PropertyName="ResourcesValue" />
    </XmlPeek>

    <Error File="%(ImageManifests.FullPath)" Text="Cannot find the Value attribute of the Resources element. imagemanifest cannot be updated." Condition="'$(ResourcesValue)' == ''" />

    <PropertyGroup>
      <LastIndex>$([MSBuild]::Subtract($(ResourcesValue.Split(';').Length), 1))</LastIndex>
      <LastComponent>$(ResourcesValue.Split(';')[$(LastIndex)])</LastComponent>
      <ValueToSet>$([System.String]::Concat(/$(AssemblyName);v%(ImageManifests.AssemblyVersion);%(ImageManifests.PublicKeyToken);$(LastComponent)))</ValueToSet>
    </PropertyGroup>

    <XmlPoke Namespaces="$(Namespace)" XmlInputPath="%(ImageManifests.FullPath)" Query="$(XPathQuery)" Value="$(ValueToSet)" />

    <Message Importance="High" Text="The Resources value in the imagemanifest has been updated to $(ValueToSet) - File: $(ManifestFile)" />

  </Target>

  <Target Name="CheckStringInFile" AfterTargets="Build">

    <PropertyGroup>
      <FilePath>$(TargetDir)$(TargetName).pkgdef</FilePath>
      <SearchString>RuntimeConfiguration\dependentAssembly\codeBase</SearchString>
    </PropertyGroup>

    <ReadLinesFromFile File="$(FilePath)">
      <Output TaskParameter="Lines" ItemName="FileLines"/>
    </ReadLinesFromFile>

    <FindInList List="@(FileLines)" ItemSpecToFind="$(SearchString)">
      <Output TaskParameter="ItemFound" ItemName="FoundItem"/>
    </FindInList>

    <PropertyGroup>
      <FileContent>@(FileLines)</FileContent>
    </PropertyGroup>

    <!-- Fail the build if the string is not found -->
    <!--<Error Text="The [CodeBase] attribute must be set on the assembly (no params) for getting custom images to work." Condition="'$(FileContent.Contains($(SearchString)))' != 'True'" />-->
  </Target>

</Project>